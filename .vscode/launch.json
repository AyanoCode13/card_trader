{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug card_trader with Nx",
      "runtimeExecutable": "npx",
      "runtimeArgs": ["nx", "serve", "card_trader"],
      "env": {
        "NODE_OPTIONS": "--inspect=9229"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/apps/card_trader/dist/**/*.(m|c|)js",
        "!**/node_modules/**"
      ]
    },
